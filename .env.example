# ========================================
# AI Agent Multi-Tasking System - Configuration
# ========================================

# Application Settings
DEBUG=false
APP_NAME=AI Agent Multi-Tasking
APP_VERSION=1.0.0

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
# SQLite (default)
DATABASE_URL=sqlite:///./agent_db.sqlite

# PostgreSQL (alternative)
# DATABASE_URL=postgresql://user:password@localhost/agent_db

# LLM Configuration - Ollama (Local)
# Make sure Ollama is running: ollama serve
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# LLM Configuration - Mistral AI (Cloud API)
# Get API key from: https://console.mistral.ai
MISTRAL_API_KEY=
MISTRAL_MODEL=mistral-small

# ========================================
# MCP (Model Context Protocol) Configuration
# ========================================

# Enable/disable MCP integration
MCP_ENABLED=true

# Supabase (for data management)
# Get credentials from: https://supabase.com
SUPABASE_URL=
SUPABASE_KEY=

# Neon Database (PostgreSQL)
# Get connection string from: https://neon.tech
NEON_DATABASE_URL=

# ========================================
# Additional Configuration
# ========================================

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8501

# Backend URL (for API calls from frontend)
BACKEND_URL=http://localhost:8000

# Logging level
LOG_LEVEL=INFO

# ========================================
# Optional: Model Settings
# ========================================

# Temperature (0-2): Higher = more creative, Lower = more deterministic
LLM_TEMPERATURE=0.7

# Top P (0-1): Nucleus sampling
LLM_TOP_P=0.9

# Max tokens per generation
LLM_MAX_TOKENS=4096

# ========================================
# Installation Instructions
# ========================================

# 1. Ollama (Local AI - REQUIRED for local models)
#    Download: https://ollama.ai
#    After install, run: ollama serve
#    Pull models: ollama pull mistral
#
# 2. Mistral API Key (Cloud AI - Optional fallback)
#    Get key: https://console.mistral.ai
#    Add to MISTRAL_API_KEY above
#
# 3. Supabase (Optional - for data persistence)
#    Create project: https://supabase.com
#    Copy project URL and anon key
#
# 4. Neon Database (Optional - PostgreSQL)
#    Create database: https://neon.tech
#    Copy connection string
